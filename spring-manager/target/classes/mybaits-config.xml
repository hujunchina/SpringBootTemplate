<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias alias="role" type="com.hujunchina.core.domain.RoleDO"/>
    </typeAliases>
    
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/kunlun?allowMultiQueries=true"/>
                <property name="username" value="hujun"/>
                <property name="password" value="hujun"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mapper/role.xml"/>
    </mappers>
</configuration>